{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "cpespikedatafactory"
		},
		"CosmosDb_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'CosmosDb'"
		},
		"MongoDb_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MongoDb'"
		},
		"MongoDb2021_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MongoDb2021'"
		},
		"SQLServer_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SQLServer'"
		},
		"StorageLinkedServer_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'StorageLinkedServer'"
		},
		"MongoDb_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "spikeTest"
		},
		"MongoDb2021_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "spikeTest"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "cpespikedatafactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"CosmosDb_connectionString": {
						"value": "[parameters('CosmosDb_connectionString')]"
					},
					"MongoDb_connectionString": {
						"value": "[parameters('MongoDb_connectionString')]"
					},
					"MongoDb2021_connectionString": {
						"value": "[parameters('MongoDb2021_connectionString')]"
					},
					"SQLServer_connectionString": {
						"value": "[parameters('SQLServer_connectionString')]"
					},
					"StorageLinkedServer_connectionString": {
						"value": "[parameters('StorageLinkedServer_connectionString')]"
					},
					"MongoDb_properties_typeProperties_database": {
						"value": "[parameters('MongoDb_properties_typeProperties_database')]"
					},
					"MongoDb2021_properties_typeProperties_database": {
						"value": "[parameters('MongoDb2021_properties_typeProperties_database')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "cpespikedatafactory_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'cpespikedatafactory_ArmTemplate_0')]"
			]
		}
	]
}